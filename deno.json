{
  "name": "@what/lang",
  "version": "0.1.0",
  "exports": "./src/lib.ts",
  "tasks": {
    "build": "wat2wasm --debug-names -o src/mod.wasm src/mod.wat",
    "test": {
      "command": "deno test --allow-run='wat2wasm' -R='.' -W='.' --doc",
      "dependencies": ["build"]
    },
    "run": {
      "command": "deno run --allow-run='wat2wasm' -RW src/main.ts",
      "dependencies": ["build"]
    },
    "compile": {
      "command": "deno compile --allow-run='wat2wasm' -RW --output whatc src/main.ts",
      "dependencies": ["build"]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/path": "jsr:@std/path@^1.1.1"
  }
}
