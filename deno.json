{
  "name": "@what/lang",
  "version": "0.1.0",
  "exports": "./src/lib.ts",
  "permissions": {
    "default": {
      "read": ["."],
      "write": {
        "allow": ["."],
        "deny": ["./deno.json", "./.git/", "./.github/", "./src/"]
      },
      "run": ["wat2wasm", "wasm-opt"]
    }
  },
  "tasks": {
    "debug": "wat2wasm src/mod.wat -o src/mod.wasm --debug-names",
    "release": "wat2wasm src/mod.wat -o /dev/stdout | wasm-opt - -o src/mod.wasm -Oz --enable-multivalue",
    "test": {
      "command": "deno test -P --no-prompt --doc",
      "dependencies": ["debug"]
    },
    "run": {
      "command": "deno run -P --no-prompt src/main.ts",
      "dependencies": ["debug"]
    },
    "compile": {
      "command": "deno compile -P --no-prompt -o whatc src/main.ts",
      "dependencies": ["release"]
    }
  },
  "publish": { "exclude": ["!src/*.wasm"] },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/path": "jsr:@std/path@^1.1.1"
  }
}
